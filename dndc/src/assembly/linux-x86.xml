<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

	<id>linux-x86</id>
	<formats>
		<format>zip</format>
	</formats>
	<fileSets><!-- <fileSet> <directory>${project.build.directory}</directory> 
			<outputDirectory>/lib</outputDirectory> <includes> <include>*.jar</include> 
			</includes> <fileMode>0774</fileMode> </fileSet> -->
		<fileSet>
			<directory>src/bash</directory>
			<outputDirectory>/</outputDirectory>
			<fileMode>0755</fileMode>
			<lineEnding>unix</lineEnding>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>/lib</outputDirectory>
			<excludes>
				<exclude>*:*win32*:*</exclude>
				<exclude>*:*x86_64:*</exclude>
			</excludes>
			<fileMode>0664</fileMode>
			<useProjectArtifact>true</useProjectArtifact>
		</dependencySet>
	</dependencySets>
</assembly>
